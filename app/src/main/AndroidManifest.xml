<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cristian.proyectomercadolibre">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProyectoMercadoLibre"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".framework.ui.categoriesDetails.CategoriesDetailsActivity"
            android:exported="true" />
        <activity
            android:name=".framework.ui.itemsDetails.ItemsDetailsActivity"
            android:exported="true" />
        <activity
            android:name=".framework.ui.categories.CategoriesActivity"
            android:exported="true"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".framework.ui.items.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="stateHidden" />
    </application>

</manifest>