<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/cardItemsCategoriesDetails">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgViewCategoriesDetails"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/Circular" />

        <TextView
            android:textAlignment="center"
            android:id="@+id/txtNameProductCategoriesDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgViewCategoriesDetails"/>

        <TextView
            android:textAlignment="center"
            android:id="@+id/txtPriceCategoriesDetails"
            android:layout_below="@+id/txtNameProductCategoriesDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtSellCategoriesDetails"
            android:hint="@string/soldOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPriceCategoriesDetails"
            android:layout_centerInParent="true"
            android:textAlignment="center" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>